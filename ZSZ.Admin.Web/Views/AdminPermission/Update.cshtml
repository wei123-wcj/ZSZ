@model PermissionDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/H-ui.min.css" rel="stylesheet" />
    <link href="~/css/H-ui.admin.css" rel="stylesheet" />
    <link href="~/lib/icheck/icheck.css" rel="stylesheet" />
    <link href="~/lib/Hui-iconfont/1.0.1/iconfont.css" rel="stylesheet" />
    <title>添加权限节点</title>
</head>
<body>
    <form action="" method="post" class="form form-horizontal" id="form-admin-add">
        <div class="row cl">

            <div class="formControls col-5">
                <input type="hidden" class="input-text" value="@Model.Id" placeholder="权限编号" id="user-name" name="Id">
            </div>
            <div class="col-4"> </div>
        </div>
        <div class="row cl">
            <label class="form-label col-3"><span class="c-red">*</span>权限名称：</label>
            <div class="formControls col-5">
                <input type="text" class="input-text" value="@Model.Name" placeholder="权限名称" id="user-name" name="Name" datatype="*2-16" nullmsg="权限名称不能为空">
            </div>
            <div class="col-4"> </div>
        </div>
        <div class="row cl">
            <label class="form-label col-3"><span class="c-red">*</span>权限描述：</label>
            <div class="formControls col-5">
                <input type="text" placeholder="权限描述" autocomplete="off" value="@Model.Description" class="input-text" name="Description" datatype="*2-16" nullmsg="权限描述不能为空">
            </div>
            <div class="col-4"> </div>
        </div>
        <div class="row cl">
            <div class="col-9 col-offset-3">
                <input class="btn btn-primary radius" id="add" type="button" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
            </div>
        </div>
    </form>
    <script src="~/lib/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/lib/icheck/jquery.icheck.min.js"></script>
    <script src="~/lib/Validform/5.3.2/Validform.min.js"></script>
    <script src="~/lib/layer/1.9.3/layer.js"></script>
    <script src="~/js/H-ui.js"></script>
    <script src="~/js/H-ui.admin.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.skin-minimal input').iCheck({
                checkboxClass: 'icheckbox-blue',
                radioClass: 'iradio-blue',
                increaseArea: '20%'
            });
            $('#add').click(function () {
                var data = $('#form-admin-add').serializeArray();
                $.ajax({
                    url: "/AdminPermission/Update",
                    type: "post",
                    data: data,
                    dataType: "json",
                    success: function (res) {
                        if (res != 0) {
                            window.parent.location.reload();
                        }
                        else {
                            alert('修改失败');
                        }
                    },
                    error: function (org) {
                        alert('网络异常');
                    }
                })
            })
            $("#form-admin-add").Validform({
                tiptype: 2,
                callback: function (form) {
                    form[0].submit();
                    var index = parent.layer.getFrameIndex(window.name);
                    parent.$('.btn-refresh').click();
                    parent.layer.close(index);

                }
            });
        });
    </script>
</body>
</html>
